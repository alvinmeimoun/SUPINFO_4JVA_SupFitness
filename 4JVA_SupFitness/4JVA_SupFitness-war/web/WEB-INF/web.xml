<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.supinfo.supfitness.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.supinfo.supfitness.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.supinfo.supfitness.web.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.supinfo.supfitness.web.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- Rest API -->
    <servlet>
        <servlet-name>ListTrackRestServlet</servlet-name>
        <servlet-class>com.supinfo.supfitness.web.api.servlet.ListTrackRestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListTrackRestServlet</servlet-name>
        <url-pattern>/api/listTrack</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddTrackRestServlet</servlet-name>
        <servlet-class>com.supinfo.supfitness.web.api.servlet.AddTrackRestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTrackRestServlet</servlet-name>
        <url-pattern>/api/addTrack</url-pattern>
    </servlet-mapping>
    <!-- Filters -->
    <filter>
        <filter-name>AuthManagerFilter</filter-name>
        <filter-class>com.supinfo.supfitness.web.filter.AuthManagerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthCheckerFilter</filter-name>
        <filter-class>com.supinfo.supfitness.web.filter.AuthCheckerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RestAuthManagerFilter</filter-name>
        <filter-class>com.supinfo.supfitness.web.filter.RestAuthManagerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestAuthManagerFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthCheckerFilter</filter-name>
        <servlet-name>LogoutServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthManagerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
